<%= form_for feedback, :url => feedbacks_path, :as => :feedback do |f| %>
  <div class="form-holder">  
	  <%= f.label :user_name %>
	  <div class="input">
		  <div><%= f.text_field :user_name %></div>
	  </div>
	  
	  <%= f.label :user_email %>
	  <div class="input">
		  <div><%= f.text_field :user_email %></div>
	  </div>
	  
	  <%= f.label :content %>
	  <div class="textarea">
		  <div><%= f.text_area :content %></div>
	  </div>
  </div>

  <div class="buttons">
	  <%= f.submit t('sunrise.feedbacks.create') %>
  </div>
<% end %>
